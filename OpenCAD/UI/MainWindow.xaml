<Window x:Class="UI.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:UI"
	xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
	xmlns:controls="clr-namespace:UI.Controls.MainWindow"
	mc:Ignorable="d"
	Title="OpenCAD" Height="600" Width="1000"
	WindowState="Maximized"
	Background="{DynamicResource PrimaryBackgroundBrush}"
	Style="{DynamicResource ThemedWindowStyle}">

	<Grid Background="{DynamicResource PrimaryBackgroundBrush}">
		<DockPanel>
			<!-- Menu Bar -->
			<controls:MenuBarControl x:Name="menuBar" DockPanel.Dock="Top" />

			<!-- Toolbar -->
			<controls:ToolBarControl x:Name="toolBar" DockPanel.Dock="Top" />

			<!-- Status Bar -->
			<controls:StatusBarControl x:Name="statusBar" DockPanel.Dock="Bottom" />

			<!-- Main Docking Area -->
			<controls:DockingAreaControl x:Name="dockingArea" />
		</DockPanel>
	</Grid>
</Window>
