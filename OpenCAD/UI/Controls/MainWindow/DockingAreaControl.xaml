<UserControl x:Class="UI.Controls.MainWindow.DockingAreaControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:UI.Controls.MainWindow"
			 xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">
	<xcad:DockingManager x:Name="dockingManager" AllowMixedOrientation="True"
						 Background="{DynamicResource PrimaryBackgroundBrush}"
						 Foreground="{DynamicResource PrimaryTextBrush}">
		<!-- Layout Root -->
		<xcad:LayoutRoot>
			<xcad:LayoutPanel Orientation="Horizontal">

				<!-- Left Panel - Solution Explorer, etc. -->
				<xcad:LayoutAnchorablePane DockWidth="250">
					<xcad:LayoutAnchorable ContentId="solutionExplorer" Title="Solution Explorer" CanHide="True" CanClose="False">
						<TreeView Background="{DynamicResource SecondaryBackgroundBrush}" 
								 Foreground="{DynamicResource PrimaryTextBrush}">
							<TreeViewItem Header="Solution 'OpenCAD' (1 project)" IsExpanded="True">
								<TreeViewItem Header="UI" IsExpanded="True">
									<TreeViewItem Header="References" />
									<TreeViewItem Header="MainWindow.xaml">
										<TreeViewItem Header="MainWindow.xaml.cs" />
									</TreeViewItem>
									<TreeViewItem Header="App.xaml">
										<TreeViewItem Header="App.xaml.cs" />
									</TreeViewItem>
								</TreeViewItem>
							</TreeViewItem>
						</TreeView>
					</xcad:LayoutAnchorable>
				</xcad:LayoutAnchorablePane>

				<xcad:LayoutPanel Orientation="Vertical">
					<!-- Center Panel - Document Area -->
					<xcad:LayoutDocumentPane>
						<xcad:LayoutDocument ContentId="document1" Title="MainWindow.xaml" CanClose="True">
							<TextBox AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" 
									HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"
									Background="{DynamicResource PrimaryBackgroundBrush}"
									Foreground="{DynamicResource PrimaryTextBrush}"
									Text="&lt;Window x:Class=&quot;UI.MainWindow&quot;&#x0A;      xmlns=&quot;http://schemas.microsoft.com/winfx/2006/xaml/presentation&quot;&#x0A;   xmlns:x=&quot;http://schemas.microsoft.com/winfx/2006/xaml&quot;&gt;&#x0A;    &lt;Grid&gt;&#x0A;        &lt;!-- Your content here --&gt;&#x0A;    &lt;/Grid&gt;&#x0A;&lt;/Window&gt;" />
						</xcad:LayoutDocument>
						<xcad:LayoutDocument ContentId="document2" Title="MainWindow.xaml.cs" CanClose="True">
							<TextBox AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" 
									HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12"
									Background="{DynamicResource PrimaryBackgroundBrush}"
									Foreground="{DynamicResource PrimaryTextBrush}"
									Text="using System.Windows;&#x0A;&#x0A;namespace UI&#x0A;{&#x0A;    public partial class MainWindow : Window&#x0A;    {&#x0A;        public MainWindow()&#x0A;        {&#x0A;  InitializeComponent();&#x0A;  }&#x0A;    }&#x0A;}" />
						</xcad:LayoutDocument>
					</xcad:LayoutDocumentPane>

					<!-- Bottom Panel - Command Input, Output, Error List, etc. -->
					<xcad:LayoutAnchorablePane DockHeight="150">
						<xcad:LayoutAnchorable x:Name="commandInputAnchorable" ContentId="commandInput" Title="Command Input" CanHide="True" CanClose="False">
							<local:CommandInputControl x:Name="commandInputControl"/>
						</xcad:LayoutAnchorable>
						<xcad:LayoutAnchorable ContentId="output" Title="Output" CanHide="True" CanClose="False">
							<TextBox IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
									FontFamily="Consolas" FontSize="11" 
									Background="{DynamicResource OutputBackgroundBrush}" 
									Foreground="{DynamicResource OutputForegroundBrush}"
									Text="Build started...&#x0A;1&gt;------ Build started: Project: UI, Configuration: Debug Any CPU ------&#x0A;1&gt;  UI -&gt; bin\Debug\net8.0-windows\UI.exe&#x0A;========== Build: 1 succeeded, 0 failed, 0 up-to-date, 0 skipped ==========&#x0A;" />
						</xcad:LayoutAnchorable>
						<xcad:LayoutAnchorable ContentId="errorList" Title="Error List" CanHide="True" CanClose="False">
							<DataGrid AutoGenerateColumns="False" IsReadOnly="True"
									 Background="{DynamicResource SecondaryBackgroundBrush}"
									 Foreground="{DynamicResource PrimaryTextBrush}">
								<DataGrid.Columns>
									<DataGridTextColumn Header="" Width="20" />
									<DataGridTextColumn Header="Description" Width="*" />
									<DataGridTextColumn Header="File" Width="150" />
									<DataGridTextColumn Header="Line" Width="50" />
								</DataGrid.Columns>
							</DataGrid>
						</xcad:LayoutAnchorable>
					</xcad:LayoutAnchorablePane>
				</xcad:LayoutPanel>

				<!-- Right Panel - Properties, etc. -->
				<xcad:LayoutAnchorablePane DockWidth="250">
					<xcad:LayoutAnchorable ContentId="properties" Title="Properties" CanHide="True" CanClose="False">
						<Grid x:Name="propertiesGrid" Background="{DynamicResource SecondaryBackgroundBrush}">
							<ListView Background="{DynamicResource SecondaryBackgroundBrush}"
									 Foreground="{DynamicResource PrimaryTextBrush}"
									 ItemsSource="{Binding}">
								<ListView.View>
									<GridView>
										<GridViewColumn Header="Property" Width="100" DisplayMemberBinding="{Binding Property}" />
										<GridViewColumn Header="Value" Width="145" DisplayMemberBinding="{Binding Value}" />
									</GridView>
								</ListView.View>
							</ListView>
						</Grid>
					</xcad:LayoutAnchorable>
				</xcad:LayoutAnchorablePane>
			</xcad:LayoutPanel>
		</xcad:LayoutRoot>
	</xcad:DockingManager>
</UserControl>
