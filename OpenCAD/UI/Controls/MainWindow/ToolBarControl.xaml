<UserControl x:Class="UI.Controls.MainWindow.ToolBarControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Controls.MainWindow"
 mc:Ignorable="d" 
           d:DesignHeight="30" d:DesignWidth="800">
 <ToolBarTray Background="{DynamicResource ToolBarBackgroundBrush}">
    <ToolBar Band="1" BandIndex="1" Background="{DynamicResource ToolBarBackgroundBrush}">
            <Button Content="New" Click="NewFile_Click" Style="{StaticResource ToolBarButtonStyle}" />
            <Button Content="Open" Click="Open_Click" Style="{StaticResource ToolBarButtonStyle}" />
     <Button Content="Save" Click="Save_Click" Style="{StaticResource ToolBarButtonStyle}" />
    <Separator />
          <Button Content="Cut" Click="Cut_Click" Style="{StaticResource ToolBarButtonStyle}" />
   <Button Content="Copy" Click="Copy_Click" Style="{StaticResource ToolBarButtonStyle}" />
        <Button Content="Paste" Click="Paste_Click" Style="{StaticResource ToolBarButtonStyle}" />
        </ToolBar>
    </ToolBarTray>
</UserControl>
