<UserControl x:Class="UI.Controls.MainWindow.CommandInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Controls.MainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800"
             Background="{DynamicResource SecondaryBackgroundBrush}">
    <Grid Margin="5">
        <!-- Unified Terminal-Style Interface -->
        <Grid Background="{DynamicResource OutputBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Command History Display -->
            <ScrollViewer x:Name="historyScrollViewer"
                         Grid.Row="0"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Padding="0">
                <TextBlock x:Name="historyTextBlock"
                          FontFamily="Consolas"
                          FontSize="11"
                          Foreground="{DynamicResource OutputForegroundBrush}"
                          Padding="8,8,8,0"
                          TextWrapping="NoWrap"
                          Text="Welcome to OpenCAD Command Input&#x0A;Type 'help' for available commands"/>
            </ScrollViewer>

            <!-- Integrated Command Input Line -->
            <Grid Grid.Row="1" 
                  Background="{DynamicResource OutputBackgroundBrush}"
                  Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Dynamic Command Prompt -->
                <TextBlock x:Name="promptTextBlock"
                          Grid.Column="0" 
                          Text="Command >"
                          VerticalAlignment="Center"
                          FontFamily="Consolas"
                          FontSize="12"
                          FontWeight="Bold"
                          Margin="8,0,5,8"
                          Foreground="{DynamicResource OutputForegroundBrush}"/>

                <!-- Command Input TextBox -->
                <TextBox x:Name="commandTextBox"
                         Grid.Column="1"
                         BorderThickness="0"
                         Padding="0,0,8,8"
                         VerticalContentAlignment="Center"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="Transparent"
                         Foreground="{DynamicResource OutputForegroundBrush}"
                         CaretBrush="{DynamicResource OutputForegroundBrush}"
                         PreviewKeyDown="CommandTextBox_KeyDown"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>